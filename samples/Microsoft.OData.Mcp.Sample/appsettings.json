{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  },
  "AllowedHosts": "*",
  "McpServer": {
    "DeploymentMode": "Middleware",
    "ServerInfo": {
      "Name": "Sample OData MCP Server",
      "Version": "1.0.0",
      "Description": "A sample implementation of the OData MCP Server demonstrating both middleware and sidecar deployment patterns.",
      "Author": "Microsoft.OData.Mcp.Sample",
      "Homepage": "https://github.com/example/odata-mcp-server"
    },
    "ODataService": {
      "MetadataUrl": "https://services.odata.org/V4/Northwind/Northwind.svc/$metadata",
      "BaseUrl": "https://services.odata.org/V4/Northwind/Northwind.svc/"
    },
    "Authentication": {
      "Mode": "None"
    },
    "ToolGeneration": {
      "GenerateAllTools": true,
      "CrudOptions": {
        "GenerateCreateTools": true,
        "GenerateReadTools": true,
        "GenerateUpdateTools": true,
        "GenerateDeleteTools": true,
        "IncludeValidation": true,
        "GenerateDetailedDescriptions": true,
        "IncludeExamples": true
      },
      "QueryOptions": {
        "GenerateListTools": true,
        "GenerateSearchTools": true,
        "GenerateCountTools": true,
        "SupportFilter": true,
        "SupportOrderBy": true,
        "SupportSelect": true,
        "SupportExpand": true,
        "DefaultPageSize": 25,
        "MaxPageSize": 100
      },
      "NavigationOptions": {
        "GenerateGetRelatedTools": true,
        "GenerateAddRelationshipTools": false,
        "GenerateRemoveRelationshipTools": false,
        "IncludeCollectionNavigations": true,
        "IncludeSingleNavigations": true,
        "SupportQueryOptions": true
      }
    },
    "Network": {
      "RequestTimeout": "00:01:00",
      "MaxConcurrentRequests": 10,
      "EnableRetry": true,
      "RetryCount": 3,
      "RetryDelay": "00:00:02"
    },
    "Caching": {
      "EnableMetadataCaching": true,
      "MetadataCacheDuration": "01:00:00",
      "EnableResponseCaching": false
    }
  }
}