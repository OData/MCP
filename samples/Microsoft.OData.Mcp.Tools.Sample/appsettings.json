{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.OData.Mcp": "Debug"
    }
  },
  "McpServer": {
    "ServerInfo": {
      "Name": "OData MCP Server Console Demo",
      "Version": "1.0.0",
      "Description": "Provides MCP tools for interacting with OData services"
    },
    "DeploymentMode": "Console",
    "ODataService": {
      "BaseUrl": "https://services.odata.org/northwind/northwind.svc",
      "MetadataPath": "/$metadata",
      "RequestTimeout": "00:02:00",
      "MaxRetries": 3,
      "Authentication": {
        "Type": "None"
      }
    },
    "Network": {
      "Host": "localhost",
      "Port": null,
      "EnableHttps": false,
      "UseHostConfiguration": false
    },
    "Authentication": {
      "Enabled": false,
      "Scheme": "Bearer"
    },
    "ToolGeneration": {
      "EnableQueryTools": true,
      "EnableCrudTools": true,
      "EnableNavigationTools": true,
      "NamingConvention": "PascalCase",
      "IncludeExamples": true,
      "MaxQueryDepth": 3
    },
    "Caching": {
      "Enabled": true,
      "ProviderType": "Memory",
      "MetadataTtl": "00:05:00",
      "QueryResultTtl": "00:01:00"
    },
    "Monitoring": {
      "EnableMetrics": true,
      "EnableTracing": false,
      "EnableHealthChecks": true,
      "LogRequestResponse": true
    },
    "Security": {
      "RequireHttps": false,
      "EnableDetailedErrors": true,
      "EnableCors": true
    },
    "FeatureFlags": {
      "EnableExperimentalFeatures": true,
      "EnableBatchOperations": true,
      "EnableAdvancedQueries": true
    }
  }
}