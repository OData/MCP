{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "McpServer": {
    "DeploymentMode": "Sidecar",
    "ServerInfo": {
      "Name": "OData MCP Server Sidecar",
      "Version": "1.0.0",
      "Description": "Standalone MCP server for OData services",
      "Vendor": "Microsoft"
    },
    "ODataService": {
      "BaseUrl": "https://services.odata.org/Northwind/Northwind.svc",
      "MetadataPath": "/$metadata",
      "AutoDiscoverMetadata": true,
      "RefreshInterval": "00:30:00",
      "Authentication": {
        "Type": "None"
      }
    },
    "Network": {
      "Host": "localhost",
      "Port": 5000,
      "BasePath": "/mcp",
      "EnableHttps": false,
      "UseHostConfiguration": false,
      "MaxConcurrentConnections": 100,
      "ConnectionTimeout": "00:00:30",
      "RequestTimeout": "00:05:00",
      "KeepAliveTimeout": "00:02:00",
      "MaxRequestBodySize": 1048576,
      "Cors": {
        "Enabled": true,
        "AllowedOrigins": ["*"],
        "AllowedMethods": ["GET", "POST", "OPTIONS"],
        "AllowedHeaders": ["*"],
        "AllowCredentials": false,
        "MaxAge": "00:05:00"
      },
      "Compression": {
        "Enabled": true,
        "Algorithms": ["gzip", "deflate"],
        "MinimumSize": 1024,
        "MimeTypes": [
          "application/json",
          "application/xml",
          "text/plain",
          "text/html"
        ]
      }
    },
    "Authentication": {
      "Enabled": false,
      "Type": "None",
      "RequireHttps": false,
      "DelegationStrategy": "PassThrough"
    },
    "Caching": {
      "Enabled": true,
      "ProviderType": "Memory",
      "MetadataTtl": "01:00:00",
      "ToolsTtl": "00:30:00",
      "QueryResultsTtl": "00:05:00",
      "MaxSizeMb": 100,
      "MaxEntries": 1000,
      "EvictionPolicy": "LeastRecentlyUsed",
      "KeyPrefix": "mcp:",
      "EnableStatistics": true,
      "EnableWarming": false,
      "WarmingDelay": "00:00:30"
    },
    "Monitoring": {
      "LogLevel": "Information",
      "EnableStructuredLogging": true,
      "LogRequestResponse": false,
      "LogSensitiveData": false,
      "EnableMetrics": true,
      "EnableHealthChecks": true,
      "EnableTracing": false,
      "TracingSamplingRate": 0.1,
      "MetricsInterval": "00:01:00",
      "HealthCheckInterval": "00:01:00",
      "HealthCheckTimeout": "00:00:30",
      "OpenTelemetry": {
        "Enabled": false,
        "ServiceName": "odata-mcp-server",
        "ServiceVersion": "1.0.0"
      },
      "ApplicationInsights": {
        "Enabled": false,
        "SamplingPercentage": 100.0
      }
    },
    "Security": {
      "RequireHttps": false,
      "EnableDetailedErrors": false,
      "EnableRateLimiting": false,
      "MaxRequestSize": 1048576,
      "MaxQueryStringLength": 2048,
      "MaxQueryParameters": 100,
      "AllowedHttpMethods": ["GET", "POST", "OPTIONS"],
      "AllowedHosts": ["*"]
    },
    "FeatureFlags": {
      "EnableDevelopmentEndpoints": false,
      "EnableExperimentalFeatures": false,
      "EnableBatchOperations": true,
      "EnableAdvancedQuerying": true,
      "EnableCachingOptimizations": false,
      "EnableAsyncStreaming": false,
      "EnableCustomToolExtensions": false,
      "EnforceStrictSchemaValidation": true,
      "EnableLegacyCompatibility": false,
      "EnablePerformanceProfiling": false,
      "EnableBetaApiVersions": false,
      "EnableEnhancedSecurity": false
    },
    "ToolGeneration": {
      "GenerateCreateTools": true,
      "GenerateReadTools": true,
      "GenerateUpdateTools": true,
      "GenerateDeleteTools": true,
      "GenerateQueryTools": true,
      "GenerateNavigationTools": true,
      "IncludeComplexTypes": true,
      "IncludeEnumTypes": true,
      "GenerateDescriptions": true,
      "UseSchemaDescriptions": true,
      "MaximumDepth": 3,
      "IncludeRelationships": true
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/sidecar-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760,
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "ODataMcpSidecar"
    }
  }
}