{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.OData.Mcp": "Information"
    }
  },
  "McpServer": {
    "Network": {
      "EnableHttps": true,
      "Port": 443,
      "HttpsPort": 443
    },
    "Authentication": {
      "Enabled": true,
      "RequireHttps": true
    },
    "Monitoring": {
      "LogLevel": "Warning",
      "LogRequestResponse": false,
      "LogSensitiveData": false,
      "EnableTracing": true,
      "TracingSamplingRate": 0.01,
      "OpenTelemetry": {
        "Enabled": true
      }
    },
    "Security": {
      "RequireHttps": true,
      "EnableDetailedErrors": false,
      "EnableRateLimiting": true,
      "MaxRequestSize": 1048576,
      "MaxQueryStringLength": 1024,
      "MaxQueryParameters": 50,
      "EnableEnhancedSecurity": true
    },
    "FeatureFlags": {
      "EnableDevelopmentEndpoints": false,
      "EnableExperimentalFeatures": false,
      "EnableCachingOptimizations": true,
      "EnableEnhancedSecurity": true
    },
    "Caching": {
      "ProviderType": "Distributed",
      "MetadataTtl": "04:00:00",
      "ToolsTtl": "02:00:00",
      "QueryResultsTtl": "00:15:00",
      "MaxSizeMb": 500,
      "MaxEntries": 10000,
      "EnableWarming": true,
      "WarmingDelay": "00:01:00",
      "Compression": {
        "Enabled": true
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "Microsoft.OData.Mcp": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/odata-mcp-server/sidecar-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 52428800,
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}