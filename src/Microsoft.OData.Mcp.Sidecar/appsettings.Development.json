{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.OData.Mcp": "Debug"
    }
  },
  "McpServer": {
    "Network": {
      "EnableHttps": false,
      "Port": 5000
    },
    "Authentication": {
      "Enabled": false
    },
    "Monitoring": {
      "LogLevel": "Debug",
      "LogRequestResponse": true,
      "LogSensitiveData": true,
      "EnableTracing": true,
      "TracingSamplingRate": 1.0,
      "MetricsInterval": "00:00:30",
      "HealthCheckInterval": "00:00:30"
    },
    "Security": {
      "RequireHttps": false,
      "EnableDetailedErrors": true
    },
    "FeatureFlags": {
      "EnableDevelopmentEndpoints": true,
      "EnableExperimentalFeatures": true,
      "EnablePerformanceProfiling": true
    },
    "Caching": {
      "MetadataTtl": "00:05:00",
      "ToolsTtl": "00:02:00",
      "QueryResultsTtl": "00:01:00",
      "MaxSizeMb": 50,
      "MaxEntries": 500
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information",
        "System": "Information"
      }
    }
  }
}